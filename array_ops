#ifndef ARRAP_OPS
#define ARRAP_OPS

#include <iostream>

void readArray(int** array, int* size) {
	std::cout << "Size: ";
	int s;
	std::cin >> s;
	*size = s;
	*array = new int[s];
	std::cout << "Elements:" << std::endl;
	for (int i = 0; i < s; i++) {
		std::cout << '[' << i << "]: ";
		std::cin >> (*array)[i];
	}
	std::cout << std::endl;
}

void showArray(int* array, int size) {
	for (int i = 0; i < size; i++)
		std::cout << array[i] << ' ';
	std::cout << std::endl;
}

void demonstrate(void (*sortAlgo)(int*, int), std::string name) {
	std::cout << name << std::endl;
	int* array;
	int size;
	readArray(&array, &size);
	sortAlgo(array, size);
	showArray(array, size);
	delete[] array;
}

#endif